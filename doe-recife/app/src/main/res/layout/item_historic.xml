<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp" >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/rl_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp" >

            <TextView
                android:id="@+id/institution_name"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Nooodddkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkddd" />
            
            
            
            <TextView
                android:id="@+id/institution_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:text="12"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/institution_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/institution_count"
                android:layout_marginLeft="16dp"
                android:text="doações"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/institution_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/institution_name"
                android:layout_marginTop="8dp"
                android:text="District" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>